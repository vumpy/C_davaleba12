

CC = gcc
CFLAGS = -Wall

all: exercise1
.PHONY : all

exercise1: exercise1.o mystrcat1.o mgetline1.o
	$(CC) $(CFLAGS) -o exercise1 exercise1.o mystrcat1.o mgetline1.o
	
mystrcat1.o : mystrcat1.c
	$(CC) $(CFLAGS) -c -o mystrcat1.c mystrcat1.o
	
mgetline1.o : mgetline1.c
	$(CC) $(CFLAGS) -c -o mgetline1.c mgetline1.o
	
exercise1.o : exercise1.c
	$(CC) $(CFLAGS) -c -o exercise1.c exercise1.o
	
debug: clean exercise1.c mystrcat1.c mgetline1.c
	$(CC) $(CFLAGS) -g -o test exercise1.c mystrcat1.c mgetline1.c
	gdb -tui test

.PHONY: clean
clean:
	rm -rf *.0   
